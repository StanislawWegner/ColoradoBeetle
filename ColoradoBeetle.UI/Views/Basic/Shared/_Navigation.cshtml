 @using ColoradoBeetle.Application.Dictionaries;
@using ColoradoBeetle.UI.Extensions;
<ul class="client-panel nav nav-pills flex-column mb-sm-auto align-items-center align-items-sm-start mb-4" id="menu">

    <li class="nav-item">
        <a href="/" class="nav-link align-middle px-0 text-white my-3">
            <i class="fas fa-solid fa-house"></i><span class="d-none d-sm-inline">Strona Główna</span>
        </a>
    </li>

    <li class="nav-item @Url.MakeActiveClass("Client", "Dashboard")">
        <a asp-controller="Client" asp-action="Dashboard" class="nav-link align-middle px-0 text-white">
            <i class="fas fa-solid fa-earth-americas"></i><span class="d-none d-sm-inline">Pulpit</span>
        </a>
    </li>

    <li class="nav-item @Url.MakeActiveClass("ShoppingList", "ShoppingLists,AddShoppingList")">
        <a asp-controller="ShoppingList" asp-action="ShoppingLists" class="nav-link align-middle px-0 text-white">
            <i class="fas fa-solid fa-list-ol"></i><span class="d-none d-sm-inline">Listy zakupów</span>
        </a>
    </li>

    <li class="nav-item @Url.MakeActiveClass("UserGroups", "UserGroups")">
        <a asp-controller="UserGroups" asp-action="UserGroups" class="nav-link align-middle px-0 text-white">
            <i class="fas fa-solid fa-users-between-lines"></i><span class="d-none d-sm-inline">Grupy</span>
        </a>
    </li>

    <li class="nav-item @Url.MakeActiveClass("Client", "Client,EditClient")">
        <a asp-controller="Client" asp-action="Client" class="nav-link align-middle px-0 text-white">
            <i class="fas fa-solid fa-user"></i><span class="d-none d-sm-inline">Moje dane</span>
        </a>
    </li>
    <li class="nav-item mb-3">
        <a href="https://snake.coloradobeetle.pl" class="nav-link align-middle px-0 text-white" target="_blank">
            <i class="fas fa-solid fa-gamepad"></i><span class="d-none d-sm-inline">Snake</span>
        </a>
    </li>


    <li class="nav-item">
        <a asp-controller="Home" asp-action="Contact" class="nav-link align-middle px-0 text-white">
            <i class="fas fa-solid fa-file-signature"></i><span class="d-none d-sm-inline">Kontakt</span>
        </a>
    </li>

    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Logout" class="nav-link align-middle px-0 text-white">
            <i class="fas fa-solid fa-right-from-bracket"></i><span class="d-none d-sm-inline">Wyloguj</span>
        </a>
    </li>
    
    

    @if (User.IsInRole(RolesDict.Administrator)) {

        <li class="nav-item @Url.MakeActiveClass("Group", "Groups")">
            <a asp-controller="Group" asp-action="Groups" class="nav-link align-middle px-0 text-white">
                <i class="fas fa-solid fa-people-group"></i><span class="d-none d-sm-inline">Grupy</span>
            </a>
        </li>
        
        <li class="nav-item @Url.MakeActiveClass("Client","Clients,AddClient,EditAdminClient")">
            <a asp-controller="Client" asp-action="Clients" class="nav-link align-middle px-0 text-white">
                <i class="fas fa-solid fa-users"></i><span class="d-none d-sm-inline">Użytkownicy</span>
            </a>
        </li>

        <li class="nav-item @Url.MakeActiveClass("Role", "Roles,AddRole,EditRole")">
            <a asp-controller="Role" asp-action="Roles" class="nav-link align-middle px-0 text-white">
                <i class="fas fa-solid fa-unlock-keyhole"></i><span class="d-none d-sm-inline">Role</span>
            </a>
        </li>

        <li class="nav-item @Url.MakeActiveClass("File", "Files")">
            <a asp-controller="File" asp-action="Files" class="nav-link align-middle px-0 text-white">
                <i class="fas fa-solid fa-file-lines"></i><span class="d-none d-sm-inline">Pliki</span>
            </a>
        </li>

        <li class="nav-item @Url.MakeActiveClass("Settings", "Settings")">
            <a asp-controller="Settings" asp-action="Settings" class="nav-link align-middle px-0 text-white">
                <i class="fas fa-solid fa-screwdriver-wrench"></i><span class="d-none d-sm-inline">Ustawienia</span>
            </a>
        </li>
    }
</ul>