@using ColoradoBeetle.Application.ShoppingLists.Commands.AddShopinngList;

@model AddShoppingListCommand

@{
    ViewData["Title"] = "Dodawanie nowej listy";
}

<div class="card card-primary card-border-top privateUser-bg">

    @using (Html.BeginForm("AddShoppingList, ShoppingList")) 
    {  
        @Html.AntiForgeryToken()

        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class="form-control"
                    , placeholder="Brak nazwy = aktualna data"})
                @Html.ValidationMessageFor(x => x.Name)
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-solid fa-circle-check"></i>Zapisz
            </button>

        </div>
        
    }
</div>

@section Scripts{
    <partial name="Scripts/_ValidationScriptsPartial" />
}