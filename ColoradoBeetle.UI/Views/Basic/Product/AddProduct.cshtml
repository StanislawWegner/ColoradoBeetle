@using ColoradoBeetle.Application.Products.Commands.AddProduct;
@using ColoradoBeetle.Domain.Enums;

@model AddProductCommand

@{
    ViewData["Title"] = "Dodawanie produktu";
}
 
<div class="card card-primary card-border-top privateUser-bg">

    @using (Html.BeginForm("AddProduct", "Product")) {
        
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.ShoppingListId)
        @Html.HiddenFor(x => x.UserId)

        <div class="card-body privateUser-bg">

            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class="form-control", 
                    placeholder="Wpisz nazwę produktu"})
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Quantity)
                @Html.TextBoxFor(x => x.Quantity, new { @class="form-control",
                    placeholder="opcjonalnie"})
                @Html.ValidationMessageFor(x => x.Quantity)

            </div>

            <div class="form-group row">
                <div class="col-8 pe-0">
                    @Html.LabelFor(x => x.Volume)
                    @Html.TextBoxFor(x => x.Volume, new { @class="form-control", 
                        placeholder="opcjonalnie"})
                    @Html.ValidationMessageFor(x => x.Volume)

                </div>

                <div class="col-4">
                    @Html.LabelFor(x => x.VolumeUnit)
                    @Html.DropDownList("VolumeUnit",
                new SelectList(Enum.GetValues(typeof(VolumeUnit))),
                "-",
                new { @class = "form-control dropDownsStyle"})
                    @Html.ValidationMessageFor(x => x.VolumeUnit)

                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 pe-0">
                    @Html.LabelFor(x => x.Weight)
                    @Html.TextBoxFor(x => x.Weight, new { @class="form-control", 
                        placeholder="opcjonalnie"})
                    @Html.ValidationMessageFor(x => x.Weight)

                </div>

                <div class="col-4">
                    @Html.LabelFor(x => x.WeightUnit)
                    @Html.DropDownList("WeightUnit",
                new SelectList(Enum.GetValues(typeof(WeightUnit))),
                "-",
                new { @class = "form-control dropDownsStyle"})
                    @Html.ValidationMessageFor(x => x.WeightUnit)
                </div>
            </div>
        </div>
        
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-solid fa-circle-check"></i>Zapisz
            </button>
        </div>
    }
</div>

@section Scripts{
    <partial name="Scripts/_ValidationScriptsPartial" />

    <script>

        $('#Name').on('blur', function(){

            var field = $(this);

            field.toggleClass('input-border-danger', $.trim(field.val()) === "");
        });
    </script>
}
