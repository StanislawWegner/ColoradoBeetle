@using ColoradoBeetle.Application.Groups.Commands.AddGroup;

@model AddGroupCommand

@{
    ViewData["Title"] = "Tworzenie nowej grupy";
}

<div class="card card-primary card-border-top">

    @using (Html.BeginForm("AddGroup, Group")) {
        @Html.AntiForgeryToken()

        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class="form-control"
            , placeholder="Wpisz nazwę grupy"})
                @Html.ValidationMessageFor(x => x.Name)
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-solid fa-circle-check"></i>Zapisz
            </button>

        </div>

    }
</div>

@section Scripts{
    <partial name="Scripts/_ValidationScriptsPartial" />
}