@using ColoradoBeetle.Application.Groups.Commands.EditGroup;
@model EditGroupCommand

@{
    ViewData["Title"] = "Edytuj grupę";
}

<div class="card card-primary card-border-top">

    @using (Html.BeginForm("EditGroup", "Group")) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)

        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new {@class="form-control",
            placeholder="Wprowadź nową nazwę"})
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-solid fa-circle-check"></i>Zapisz
            </button>
        </div>

    }

</div>